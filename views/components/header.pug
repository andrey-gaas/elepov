mixin header()
  header.header
    .container
      a(href="/")
        img(src="/images/logo.svg" alt="К 80-летию Б.С. Елепова").logo

      nav.nav
        a(href="/#about") О конференции
        a(href="/#programm") Программа
        a(href="/#registration") Участие
        a(href="/#organizers") Организаторы
        a(href="/#contacts") Контакты

      if !user
        div.auth-container
          a(href="/registration") Регистрация
          a(href="/login") Вход
      
      if user 
        div.auth-container
          a(href="/profile") Личный кабинет
          a(href="/logout").gray Выход

